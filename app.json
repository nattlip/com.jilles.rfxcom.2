      "class": "sensor",
      "capabilities": [
        "alarm_contact",
        "alarm_motion",
        "alarm_battery",
        "alarm_tamper",
        "alarm_night"
      ],
      "settings": [
        {
          "type": "group",
          "label": {
            "en": "General settings",
            "nl": "Instellingen"
          },
          "children": [
            {
              "id": "sensorId",
              "type": "text",
              "label": {
                "en": "Sensor id",
                "nl": "Sensor id"
              },
              "value": "0xcb02",
              "pattern": "0x[a-f0-9]+",
              "hint": {
                "en": "Hex formatted unique identifier of sensor. After battery replace this can be changed."
              }
            }
          ]
        }
      ],
      "pair": [
        {
          "id": "list_sensors",
          "template": "list_devices",
          "navigation": {
            "next": "add_sensors"
          }
        },
        {
          "id": "add_sensors",
          "template": "add_devices"
        }
      ]
    },
